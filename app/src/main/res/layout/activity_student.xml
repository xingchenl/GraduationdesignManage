<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="match_parent"

    tools:context="com.zzu.xingchen.graduationdesign.Student">

    <LinearLayout
        android:background="#e5e4d1"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:orientation="vertical">
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="20dp"></LinearLayout>

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="90dp"
            android:orientation="horizontal">

            <TextView
                android:layout_width="20dp"
                android:layout_height="wrap_content" />
            <com.zzu.xingchen.graduationdesign.timeSchedule

                android:id="@+id/yuan1"
                android:layout_gravity="center_vertical"
                android:layout_width="80dp"
                android:layout_height="80dp"

                />
            <com.zzu.xingchen.graduationdesign.timeSchedule

                android:id="@+id/yuan2"
                android:layout_gravity="center_vertical"
                android:layout_width="80dp"
                android:layout_height="80dp"

                />
            <com.zzu.xingchen.graduationdesign.timeSchedule

                android:id="@+id/yuan3"
                android:layout_gravity="center_vertical"
                android:layout_width="80dp"
                android:layout_height="80dp"

                />
            <com.zzu.xingchen.graduationdesign.timeSchedule

                android:id="@+id/yuan4"
                android:layout_gravity="center_vertical"
                android:layout_width="80dp"
                android:layout_height="80dp"

                />

        </LinearLayout>
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="90dp">

            <TextView
                android:layout_width="66dp"
                android:layout_height="wrap_content" />

            <com.zzu.xingchen.graduationdesign.timeSchedule

                android:id="@+id/yuan5"
                android:layout_gravity="center_vertical"
                android:layout_width="80dp"
                android:layout_height="80dp"

                />
            <com.zzu.xingchen.graduationdesign.timeSchedule

                android:id="@+id/yuan6"
                android:layout_gravity="center_vertical"
                android:layout_width="80dp"
                android:layout_height="80dp"

                />
            <com.zzu.xingchen.graduationdesign.timeSchedule

                android:id="@+id/yuan7"
                android:layout_gravity="center_vertical"
                android:layout_width="80dp"
                android:layout_height="80dp"

                />



        </LinearLayout>

      <LinearLayout
          android:layout_width="match_parent"
          android:layout_height="match_parent"
          android:background="#f0f5ee"
          android:orientation="vertical">
          <TextView
              android:layout_width="match_parent"
              android:layout_height="20dp" />

          <ScrollView

              android:background="#fbfbf7"
              android:layout_gravity="center"
              android:layout_width="300dp"
              android:layout_height="280dp">

              <TextView
                  android:id="@+id/text_pingyu"
                  android:background="#fbfbf7"
                 android:layout_width="wrap_content"
                  android:layout_height="wrap_content" />
          </ScrollView>

      </LinearLayout>


    </LinearLayout>




</RelativeLayout>
